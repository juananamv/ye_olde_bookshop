<h1 class="title"><%= @header %></h1>
<div class="columns is-multiline is_centered">
<% @products.each do |product| %>
  <div class="column is-one-fifth">
    <div class="card p-3 is-justify-content-space-between" style="height: 100%; display: flex; flex-direction: column">
      <div class="card-image">
        <figure class="image">
          <% if product.image.present? %>
            <%= image_tag product.image %>
          <% else %>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSezIQp6VrGb7dGRll4Pf96arevoq__jnbuIw&usqp=CAU" alt="image">
          <% end %>
        </figure>
      </div>
      <div class="card-content">
        <p class="title is-5">
          <%= link_to product.name, product %>
        </p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          Quantity: <br><%= product.quantity %>
        </p>
        <p class="card-footer-item">
          Price: <br><%= product.price %>
        </p>
      </footer>
    </div>
  </div>
<% end %>
</div>