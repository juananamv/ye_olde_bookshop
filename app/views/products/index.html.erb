<h1 class="title"><%= @header %></h1>
<% flash.each do |type, msg|%>
  <div>
    <%= msg %>
  </div>
<% end %>
<% unless @cart.empty? %>
<details>
  <%= link_to "Go to Checkout", checkout_path, class: "button", style: "margin: 10px"%>
  <summary>Shopping Cart</summary>
  <div class="columns is-multiline is_centered">
    <% @cart.each do |product| %>
      <%= render partial: "product_card", locals: { product: product }%>
      <%= link_to ' âœ–', remove_from_cart_path(product), method: :delete %>
    <% end %>
  </div>
</details>
<% end %>
<div class="columns is-multiline is_centered">
<% @products.each do |product| %>
  <%= render partial: "product_card", locals: { product: product }%>
<% end %>
</div>